@page "/"

<PageTitle>Index</PageTitle>

<MudText Typo="Typo.h6">Orange Micro Service</MudText>
<MudText Typo="Typo.body1" Class="pb-5">This dashboard provides a quick overview of the state of the microservice, over the last @((BllOptions.Value.Dashboard is null ? TimeSpan.FromDays(7) : BllOptions.Value.Dashboard.MaxHistory).Days) days.</MudText>

<MudGrid Class="pt-5" Justify="Justify.Center">
    <MudItem xs="6">
        <MudChart ChartType="ChartType.Line"
                  ChartOptions="@_settingFileCountOptions"
                  ChartSeries="@_settingFileCounts"
                  XAxisLabels="@_settingFileCountLabels"
                  Width="100%" Height="100%" />
    </MudItem>
    <MudItem xs="6">
        <MudChart ChartType="ChartType.Line"
                  ChartOptions="@_configurationEventOptions"
                  ChartSeries="@_configurationEvents"
                  XAxisLabels="@_configurationEventLabels"
                  Width="100%" Height="100%" />        
    </MudItem>
</MudGrid>
