<AuthorizeView>
    <Authorized>
        <form method="post" action="Account/Logout">
            <button type="submit" class="nav-link btn btn-link">Log out @context.User?.Identity?.Name</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
