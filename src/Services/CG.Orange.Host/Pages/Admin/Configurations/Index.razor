@page "/admin/configurations"

<PageTitle>Configurations</PageTitle>

<MudBreadcrumbs Items="_crumbs"></MudBreadcrumbs>

<MudText Typo="Typo.h6" Class="py-4 px-5">Configurations</MudText>

<MudTable Items="_settingFiles"
          Dense
          Striped
          Hover>
    <ToolBarContent>
        <MudSpacer />
    </ToolBarContent>
    <HeaderContent>
        <MudTh></MudTh>
        <MudTh>Application</MudTh>
        <MudTh>Environment</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd><MudIcon Icon="@Icons.Material.Rounded.Apps" /></MudTd>
        <MudTd DataLabel="Application">@context.ApplicationName</MudTd>
        <MudTd DataLabel="Environment">@context.EnvironmentName</MudTd>
    </RowTemplate>
    <NoRecordsContent>
        No setting files were found.
    </NoRecordsContent>
    <LoadingContent>
        Loading setting files ...    </LoadingContent>
</MudTable>